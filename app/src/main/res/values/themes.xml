<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.English_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/topic_color</item>
        <item name="colorPrimaryVariant">@color/phone_info</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nav_selected_bg</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/words_topic01</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>

    </style>

    <!--    Menu style     -->
    <style name="navigationTheme">
        <!--    color pf text and icon when selected    -->
        <item name="colorPrimary">@color/nav_selected_text</item>
        <!--    background color when selected    -->
        <item name="colorControlHighlight">@color/nav_selected_bg</item>

    </style>

    <!--    Animation style     -->
    <style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out</item>
    </style>

    <!--    imageView rounded style     -->
    <style name="roundbottomimageview" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>


    <!--  lounge user edit text style  -->
    <style name="RoundedInputText" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <!--  my friend page  -->
    <style name="FriendTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/topic_color</item>
        <item name="android:textColorPrimary">@color/words_topic01</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <!--  my collection page  -->
    <style name="CollectionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/topic_color</item>
        <item name="android:textColorPrimary">@color/words_topic01</item>
        <item name="colorSecondary">@color/white</item>
    </style>
    <style name="expandedBarTextStyle00" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/topic_color</item>
    </style>



    <!--  vocab page  -->
    <style name="expandedBarTextStyle01" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/vocab_topic_words</item>
    </style>


    <!--  phrase page  -->
    <style name="expandedBarTextStyle02" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/phrase_topic_words</item>
    </style>

    <!--  reading page  -->
    <style name="expandedBarTextStyle03" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/reading_topic_words</item>
    </style>

    <!--  Competition page  -->
    <style name="expandedBarTextStyle04" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/compete_topic_words</item>
    </style>

    <!--  all collapseBar text style  -->
    <style name="collapseBarTextStyle01" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/baloo</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>