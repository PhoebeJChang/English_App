<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/voc_cat_rcv_bg"
    android:elevation="2dp"
    android:id="@+id/phrase_rcv_linearlayout"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/phraseCatImage"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_all"/>

    <TextView
        android:id="@+id/phraseCatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p_rcv_title"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/user_msg_name"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/phraseHowManyUnitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/p_rcv_unit"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/user_msg_name"
        android:textStyle="bold" />


</LinearLayout>